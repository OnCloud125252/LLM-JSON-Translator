# Application
APP_ENVIRONMENT=development
HOST=127.0.0.1
PORT=3000
LOG_LEVEL=1
API_BASE_URL=http://localhost:3000

# Authentication
APP_API_KEY=your_app_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Redis
REDIS_URL=redis://default:your_redis_password@localhost:10001

# LLM Configuration
LLM_MODEL=gpt-4.1-mini

# Batch Processing
BATCH_SIZE=10
CONCURRENT_BATCH_CHUNK_SIZE=50
MAX_RETRIES=5
BATCH_TOKEN_SAFETY_RATIO=0.6

# Memory Cache (L2)
MEMORY_CACHE_MAX_SIZE=10000
MEMORY_CACHE_TTL_SECONDS=3600
CACHE_KEY_MEMOIZATION_LIMIT=10000

# L1 Cache (in-memory)
L1_CACHE_MAX_SIZE=1000
L1_CACHE_TTL_SECONDS=300

# Cache Versioning
CACHE_KEY_VERSION=v1
CACHE_STATS_LOG_INTERVAL_MS=300000
